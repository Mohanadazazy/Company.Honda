@using Company.Honda.PL.Dtos
@model List<UserToRoleDto>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleId = ViewData["roleId"] as string;
}

<h1>AddOrRemoveUser</h1>

<form asp-action="AddOrRemoveUser" asp-route-roleId="@roleId">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].IsSelected" />
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
            <input type="hidden" asp-for="@Model[i].Id" />
            <input type="hidden" asp-for="@Model[i].UserName" />
        </div>
    }
    <div>
        <input type="submit" name="name" value="Sumbit" class="btn btn-primary"/>
        <a asp-action="Edit" asp-route-Id="@roleId" class="btn btn-light">Cancel</a>
    </div>
</form>
