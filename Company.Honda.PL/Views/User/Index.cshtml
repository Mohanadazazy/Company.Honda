@using Company.Honda.PL.Dtos
@model IEnumerable<UserToReturnDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h1>All Users</h1>
<br />
<br />

