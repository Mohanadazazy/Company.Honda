@using Company.Honda.PL.Dtos
@model ResetPasswordDto
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All"></div>
		<form asp-action="ResetPassword">
			<input class="text mb-4" asp-for="Password" placeholder="Password" required="">
			<input class="text mb-4" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<input type="submit" value="SUMBIT">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Create New Account</a></p>
		<p><a asp-action="ForgetPassword" class="text-decoration-underline"> Forget Password ?</a></p>
	</div>
</div>

