@using Company.Honda.DAL.Models
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br />
<br />

<a asp-action ="Create" class="btn btn-primary">Create Department</a>

<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a></td>
                    <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a></td>
                    <td><a asp-action="Delete" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </thead>
    </table>
}
else
{
    <h1 class="alert alert-warning p-5 rounded-2">There Is No Departments :(</h1>
}
