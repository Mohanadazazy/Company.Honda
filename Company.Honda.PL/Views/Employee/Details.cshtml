@using Company.Honda.DAL.Models
@using Company.Honda.PL.Dtos
@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Employees Details</h1>
<br />
<br />

<div class="my-3">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" disabled />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Age">Age</label>
    <input asp-for="Age" class="form-control" disabled/>
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" class="form-control" disabled/>
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Address">Address</label>
    <input asp-for="Address" class="form-control"disabled />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Salary">Salary</label>
    <input asp-for="Salary" class="form-control" disabled/>
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Phone">Phone</label>
    <input asp-for="Phone" class="form-control" disabled/>
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="my-3">
    <input asp-for="IsActive" type="checkbox" class="form-check" disabled/>
    <label asp-for="IsActive">IsActive</label>
    <span asp-validation-for="IsActive"></span>
</div>
<div class="my-3">
    <input asp-for="IsDeleted" type="checkbox" class="form-check" disabled>
    <label asp-for="IsDeleted">IsDeleted</label>
    <span asp-validation-for="IsDeleted" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="HiringDate">Hiring Date</label>
    <input asp-for="HiringDate" class="form-control" disabled/>
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="CreateAt">Date Of Creation</label>
    <input asp-for="CreateAt" class="form-control" disabled/>
    <span asp-validation-for="CreateAt" class="text-danger"></span>
</div>
<div class="my-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back To List</a>
</div>

