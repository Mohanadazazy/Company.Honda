@using Company.Honda.DAL.Models
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />

<a asp-action="Create" class="btn btn-primary">Create Employee</a>

<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>Hiring Date</th>
                <th>Create At</th>
                <th>Details</th>
                <th>Update</th>
                <th>Remove</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Salary</td>
                <td>@item.IsActive</td>
                <td>@item.IsDeleted</td>
                <td>@item.HiringDate</td>
                <td>@item.CreateAt</td>
                <td><a asp-action="Details" class="btn btn-warning">Details</a></td>
                <td><a asp-action="Edit" class="btn btn-success">Update</a></td>
                <td><a asp-action="Delete" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>There Is No Employees :)</h3>
    </div>
}

